#editor-page
    --border-color: #575757;
    display: flex;
    flex-direction: column;
    gap: 10px;

    .editor-toolbar,.editor-toolbar.fullscreen
        border-color: var(--border-color);
        background: $color-background;
        button
            color: $color-text;
            &:hover, &.active
                background: lighten($color-background, 5%);
                border-color: var(--border-color);
        
    .CodeMirror
        border-color: var(--border-color);
        color: $color-text;
        background: $color-background;
        .CodeMirror-cursor
            border-color: $color-text;

    .CodeMirror-gutters
        background-color: $color-background;
        border-color: var(--border-color);

    .editor-preview
        border-color: var(--border-color);
        color: $color-text;
        background: $color-background;
        padding: 36px;
        pre
            background: darken($color-background, 5%);
            border: 1px solid var(--border-color);
            border-radius: 4px;
            padding: 12px;

    .editor-header
        display: flex;
        align-items: center;
        gap: 10px;
        width: fit-content;
        margin-left: auto;

    #header-editor
        .CodeMirror
            border-radius: 4px
        .CodeMirror-lines 
            .cm-header
                font-weight: normal !important;
                font-size: 1em !important;
            .cm-strong 
                font-weight: normal !important;
            .cm-em
                font-style: normal !important;

.button
    color: $color-text;
    background: transparent;
    border: none;
    border-bottom: 2px solid $color-border;
    cursor: pointer;
    padding-bottom: 3px
    &:hover
        color: $color-accent-1
        border-bottom-color: $color-accent-1
    &:active
        color: lighten($color-accent-1, 20%)
        border-color: lighten($color-accent-1, 20%)
    i
        margin-right: 3px